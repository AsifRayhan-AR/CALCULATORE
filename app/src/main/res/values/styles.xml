<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    
    <style name="Btn_Layout_style">
    <item name="android:layout_width">match_parent</item>
    <item name="android:layout_height">wrap_content</item>
    <item name="android:orientation">horizontal</item>
    <item name="android:paddingStart">30dp</item>
    <item name="android:paddingLeft">30dp</item>
    <item name="android:paddingTop">25dp</item>
    <item name="android:paddingEnd">0dp</item>
    <item name="android:paddingRight">0dp</item>
</style>

    <style name="Btn_num_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/num_btn</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="Btn_num_style2">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">0dp</item>
        <item name="android:layout_marginLeft">0dp</item>
        <item name="android:background">@drawable/num_btn</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/White</item>
    </style>

    <style name="btn_op_style">
        <item name="android:layout_width">70dp</item>
        <item name="android:layout_height">60dp</item>
        <item name="android:layout_marginStart">10dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:background">@drawable/op_btn</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/White</item>
    </style>

</resources>